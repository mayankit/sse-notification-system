# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/sseapp

# Redis
REDIS_URL=redis://redis:6379
REDIS_TLS=false

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-abc123xyz
JWT_EXPIRES_IN=7d

# SSE Configuration
HEARTBEAT_INTERVAL=30000
MAX_CONNECTIONS_PER_SERVER=50000

# Message Queue
INBOX_TTL_SECONDS=604800
EVENT_STREAM_MAXLEN=500
EVENT_STREAM_TTL=3600

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_SECONDS=60

# PORT and SERVER_ID are set per-service in docker-compose.yml
